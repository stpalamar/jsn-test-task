{
    "include": ["**/*.ts", "**/*.js"],
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "noPropertyAccessFromIndexSignature": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    }
}
