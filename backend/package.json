{
    "name": "backend",
    "type": "module",
    "engines": {
        "node": "20.x.x",
        "npm": ">=10.x.x"
    },
    "scripts": {
        "lint:type": "npx tsc --noEmit",
        "lint:js": "npx eslint \"src/**/*.ts\"",
        "lint": "npm run lint:type && npm run lint:js",
        "start:dev": "nodemon --exec tsx src/index.ts",
        "build": "tsc && tsc-alias -p tsconfig.json && npm run build:copy",
        "build:copy": "cp -r package.json build",
        "start": "node ./src/index.js"
    },
    "dependencies": {
        "convict": "6.2.4",
        "dotenv": "16.4.5",
        "express": "4.21.1",
        "knex": "3.1.0",
        "objection": "3.1.5",
        "pg": "8.13.1",
        "pino": "9.5.0",
        "pino-pretty": "11.3.0"
    },
    "devDependencies": {
        "@types/convict": "6.1.6",
        "@types/express": "5.0.0",
        "nodemon": "3.1.7",
        "tsx": "4.19.2"
    }
}
